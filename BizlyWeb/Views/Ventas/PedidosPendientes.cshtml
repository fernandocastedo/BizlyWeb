@model List<VentaViewModel>
@{
    ViewData["Title"] = "Pedidos Pendientes";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-clock"></i> Pedidos Pendientes
                </h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver al Historial
                </a>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var pedido in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-warning">
                            <h5 class="mb-0">Pedido #@pedido.Id</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Fecha:</strong> @pedido.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>Cliente:</strong> @(pedido.ClienteNombre ?? "Sin cliente")</p>
                            <p><strong>Total:</strong> <span class="fs-5 text-primary">@pedido.Total.ToString("C")</span></p>
                            <p><strong>Productos:</strong> @pedido.Detalles.Count</p>
                            
                            @if (pedido.EsEnvio)
                            {
                                <p><span class="badge bg-info">Env√≠o</span></p>
                            }

                            <hr />

                            <form asp-action="ActualizarEstado" method="post" class="mb-2">
                                <input type="hidden" name="id" value="@pedido.Id" />
                                <input type="hidden" name="estadoPedido" value="completado" />
                                <button type="submit" class="btn btn-success btn-sm w-100">
                                    <i class="fas fa-check"></i> Marcar como Completado
                                </button>
                            </form>

                            <a asp-action="Detalle" asp-route-id="@pedido.Id" class="btn btn-outline-info btn-sm w-100">
                                <i class="fas fa-eye"></i> Ver Detalle
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
            <p class="text-muted">No hay pedidos pendientes.</p>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


