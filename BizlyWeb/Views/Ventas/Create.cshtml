@model PuntoVentaViewModel
@{
    ViewData["Title"] = "Punto de Venta";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-cash-register"></i> Punto de Venta
            </h2>
        </div>
    </div>

    <div class="row">
        <!-- Panel de Productos -->
        <div class="col-md-5">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-boxes"></i> Productos Disponibles
                    </h5>
                </div>
                <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                    <div class="mb-3">
                        <input type="text" id="buscarProducto" class="form-control" placeholder="Buscar producto...">
                    </div>
                    <div id="listaProductos">
                        @foreach (var producto in Model.Productos)
                        {
                            <div class="card mb-2 producto-item" data-nombre="@producto.Nombre.ToLower()">
                                <div class="card-body p-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>@producto.Nombre</strong>
                                            <br>
                                            <small class="text-muted">@producto.Descripcion</small>
                                            <br>
                                            <span class="text-primary fw-bold">@producto.PrecioVenta.ToString("C")</span>
                                        </div>
                                        <button type="button" class="btn btn-sm btn-primary agregar-producto" 
                                                data-producto-id="@producto.Id" 
                                                data-producto-nombre="@producto.Nombre" 
                                                data-producto-precio="@producto.PrecioVenta">
                                            <i class="fas fa-plus"></i> Agregar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Panel del Carrito -->
        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-shopping-cart"></i> Carrito de Compras
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" id="ventaForm">
                        <div id="carritoContainer">
                            <p class="text-muted text-center py-4">El carrito está vacío. Agrega productos desde el panel izquierdo.</p>
                        </div>

                        <hr />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Cliente (Opcional)</label>
                                <select name="clienteId" class="form-select" id="clienteSelect">
                                    <option value="">Sin cliente</option>
                                    @foreach (var cliente in Model.Clientes)
                                    {
                                        <option value="@cliente.Id">@cliente.Nombre</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Método de Pago *</label>
                                <select name="metodoPago" class="form-select" required>
                                    <option value="efectivo" selected>Efectivo</option>
                                    <option value="tarjeta">Tarjeta</option>
                                    <option value="transferencia">Transferencia</option>
                                    <option value="cheque">Cheque</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input type="checkbox" name="esEnvio" value="true" class="form-check-input" id="esEnvio">
                                <label class="form-check-label" for="esEnvio">
                                    Es un pedido con envío
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4>Total: <span id="totalVenta" class="text-success">$0.00</span></h4>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg" id="btnFinalizarVenta" disabled>
                                <i class="fas fa-check"></i> Finalizar Venta
                            </button>
                            <button type="button" class="btn btn-outline-danger" id="btnLimpiarCarrito">
                                <i class="fas fa-trash"></i> Limpiar Carrito
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        let carrito = [];
        const productos = @Html.Raw(Json.Serialize(Model.Productos));

        // Agregar producto al carrito
        $(document).on('click', '.agregar-producto', function() {
            const productoId = $(this).data('producto-id');
            const productoNombre = $(this).data('producto-nombre');
            const productoPrecio = parseFloat($(this).data('producto-precio'));

            const itemExistente = carrito.find(item => item.productoId === productoId);
            if (itemExistente) {
                itemExistente.cantidad++;
                itemExistente.subtotal = itemExistente.cantidad * itemExistente.precioUnitario;
            } else {
                carrito.push({
                    productoId: productoId,
                    productoNombre: productoNombre,
                    cantidad: 1,
                    precioUnitario: productoPrecio,
                    subtotal: productoPrecio
                });
            }

            actualizarCarrito();
        });

        // Actualizar cantidad
        $(document).on('change', '.cantidad-input', function() {
            const index = $(this).data('index');
            const nuevaCantidad = parseInt($(this).val()) || 0;
            
            if (nuevaCantidad <= 0) {
                carrito.splice(index, 1);
            } else {
                carrito[index].cantidad = nuevaCantidad;
                carrito[index].subtotal = carrito[index].cantidad * carrito[index].precioUnitario;
            }

            actualizarCarrito();
        });

        // Eliminar producto del carrito
        $(document).on('click', '.eliminar-item', function() {
            const index = $(this).data('index');
            carrito.splice(index, 1);
            actualizarCarrito();
        });

        // Limpiar carrito
        $('#btnLimpiarCarrito').click(function() {
            if (confirm('¿Estás seguro de limpiar el carrito?')) {
                carrito = [];
                actualizarCarrito();
            }
        });

        // Buscar producto
        $('#buscarProducto').on('input', function() {
            const busqueda = $(this).val().toLowerCase();
            $('.producto-item').each(function() {
                const nombre = $(this).data('nombre');
                if (nombre.includes(busqueda)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });

        function actualizarCarrito() {
            const container = $('#carritoContainer');
            let total = 0;

            if (carrito.length === 0) {
                container.html('<p class="text-muted text-center py-4">El carrito está vacío. Agrega productos desde el panel izquierdo.</p>');
                $('#totalVenta').text('$0.00');
                $('#btnFinalizarVenta').prop('disabled', true);
                return;
            }

            let html = '<div class="table-responsive"><table class="table table-sm"><thead><tr><th>Producto</th><th>Cantidad</th><th>Precio</th><th>Subtotal</th><th></th></tr></thead><tbody>';
            
            carrito.forEach((item, index) => {
                total += item.subtotal;
                html += `
                    <tr>
                        <td>${item.productoNombre}</td>
                        <td>
                            <input type="number" class="form-control form-control-sm cantidad-input" 
                                   value="${item.cantidad}" min="1" data-index="${index}" style="width: 80px;">
                        </td>
                        <td>$${item.precioUnitario.toFixed(2)}</td>
                        <td>$${item.subtotal.toFixed(2)}</td>
                        <td>
                            <button type="button" class="btn btn-sm btn-danger eliminar-item" data-index="${index}">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
            });

            html += '</tbody></table></div>';

            // Agregar campos hidden para el formulario
            carrito.forEach((item, index) => {
                html += `<input type="hidden" name="productoIds" value="${item.productoId}">`;
                html += `<input type="hidden" name="cantidades" value="${item.cantidad}">`;
            });

            container.html(html);
            $('#totalVenta').text('$' + total.toFixed(2));
            $('#btnFinalizarVenta').prop('disabled', false);
        }

        // Validar antes de enviar
        $('#ventaForm').on('submit', function(e) {
            if (carrito.length === 0) {
                e.preventDefault();
                alert('Debe agregar al menos un producto al carrito.');
                return false;
            }
        });
    </script>
}

