@model List<CategoriaViewModel>
@{
    ViewData["Title"] = "Categorías";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-tags"></i> Categorías
                </h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nueva Categoría
                </a>
            </div>
        </div>
    </div>

    <!-- Lista de Categorías -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Lista de Categorías (@Model.Count)</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Fecha de Creación</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var categoria in Model)
                            {
                                <tr>
                                    <td><strong>@categoria.Nombre</strong></td>
                                    <td>@(string.IsNullOrEmpty(categoria.Descripcion) ? "-" : categoria.Descripcion)</td>
                                    <td>@categoria.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@categoria.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@categoria.Id" method="post" class="d-inline" onsubmit="return confirm('¿Está seguro de eliminar esta categoría?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No se encontraron categorías. <a asp-action="Create">Crear primera categoría</a>
                </div>
            }
        </div>
    </div>
</div>


