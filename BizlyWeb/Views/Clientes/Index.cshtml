@model ClienteIndexViewModel
@{
    ViewData["Title"] = "Clientes";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-users"></i> Clientes
                </h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nuevo Cliente
                </a>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Nombre</label>
                    <input type="text" name="nombre" class="form-control" value="@Model.FiltroNombre" placeholder="Buscar por nombre...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">NIT</label>
                    <input type="number" name="nit" class="form-control" value="@Model.FiltroNit" placeholder="Buscar por NIT...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" value="@Model.FiltroEmail" placeholder="Buscar por email...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Teléfono</label>
                    <input type="text" name="telefono" class="form-control" value="@Model.FiltroTelefono" placeholder="Buscar por teléfono...">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search"></i> Filtrar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Limpiar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Top Clientes -->
    @if (Model.TopClientes.Any())
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-trophy"></i> Top Clientes</h5>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index" class="row g-3 mb-3">
                    <input type="hidden" name="nombre" value="@Model.FiltroNombre">
                    <input type="hidden" name="nit" value="@Model.FiltroNit">
                    <input type="hidden" name="email" value="@Model.FiltroEmail">
                    <input type="hidden" name="telefono" value="@Model.FiltroTelefono">
                    <div class="col-md-4">
                        <label class="form-label">Fecha Inicio (Top Clientes)</label>
                        <input type="date" name="fechaInicio" class="form-control" value="@(Model.FiltroFechaInicio?.ToString("yyyy-MM-dd"))">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Fecha Fin (Top Clientes)</label>
                        <input type="date" name="fechaFin" class="form-control" value="@(Model.FiltroFechaFin?.ToString("yyyy-MM-dd"))">
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-filter"></i> Filtrar Top Clientes
                        </button>
                    </div>
                </form>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Cliente</th>
                                <th>Total Compras</th>
                                <th>Total Gastado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.TopClientes.Count; i++)
                            {
                                <tr>
                                    <td><strong>@(i + 1)</strong></td>
                                    <td>@Model.TopClientes[i].ClienteNombre</td>
                                    <td>@Model.TopClientes[i].TotalCompras</td>
                                    <td>@Model.TopClientes[i].TotalGastado.ToBolivianos()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Lista de Clientes -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Lista de Clientes (@Model.Clientes.Count)</h5>
        </div>
        <div class="card-body">
            @if (Model.Clientes.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>NIT</th>
                                <th>Email</th>
                                <th>Teléfono</th>
                                <th>Dirección</th>
                                <th>Fecha Registro</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cliente in Model.Clientes)
                            {
                                <tr>
                                    <td>@cliente.Nombre</td>
                                    <td>@cliente.Nit</td>
                                    <td>@cliente.Email</td>
                                    <td>@cliente.Telefono</td>
                                    <td>@cliente.Direccion</td>
                                    <td>@cliente.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@cliente.Id" method="post" class="d-inline" onsubmit="return confirm('¿Está seguro de eliminar este cliente?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No se encontraron clientes. <a asp-action="Create">Crear primer cliente</a>
                </div>
            }
        </div>
    </div>
</div>


