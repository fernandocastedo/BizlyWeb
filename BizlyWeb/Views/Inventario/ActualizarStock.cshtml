@model InsumoViewModel
@{
    ViewData["Title"] = "Actualizar Stock";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-lg-6 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-warehouse"></i> Actualizar Stock
                    </h4>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5>@Model.Nombre</h5>
                        <p class="text-muted mb-0">Unidad: @Model.UnidadMedida</p>
                        <p class="text-muted">Stock Mínimo: @Model.StockMinimo.ToString("N2")</p>
                    </div>

                    <div class="alert alert-info">
                        <strong>Stock Actual:</strong> <span class="fs-4">@Model.Cantidad.ToString("N2")</span> @Model.UnidadMedida
                        @if (Model.StockBajo)
                        {
                            <span class="badge bg-warning ms-2">Stock Bajo</span>
                        }
                    </div>

                    <form asp-action="ActualizarStock" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label">Nueva Cantidad *</label>
                            <input type="number" name="nuevaCantidad" step="0.01" min="0" class="form-control" required />
                            <small class="form-text text-muted">Ingresa la nueva cantidad total de stock</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tipo de Movimiento *</label>
                            <select name="tipoMovimiento" class="form-select" required>
                                <option value="ajuste">Ajuste</option>
                                <option value="entrada">Entrada</option>
                                <option value="salida">Salida</option>
                            </select>
                            <small class="form-text text-muted">Tipo de movimiento para el registro</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Motivo</label>
                            <textarea name="motivo" class="form-control" rows="3" placeholder="Ej: Compra de proveedor, Ajuste de inventario, etc."></textarea>
                            <small class="form-text text-muted">Razón del cambio de stock</small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Actualizar Stock
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

