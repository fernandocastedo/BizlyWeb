@model InsumoViewModel
@{
    ViewData["Title"] = "Crear Insumo";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus"></i> Crear Nuevo Insumo
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label">Nombre *</label>
                                <input asp-for="Nombre" class="form-control" required />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoriaId" class="form-label">Categoría</label>
                                <select asp-for="CategoriaId" class="form-select">
                                    <option value="">Sin categoría</option>
                                    @if (ViewBag.Categorias != null)
                                    {
                                        @foreach (var categoria in (List<CategoriaViewModel>)ViewBag.Categorias)
                                        {
                                            <option value="@categoria.Id">@categoria.Nombre</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="CategoriaId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Cantidad" class="form-label">Cantidad Inicial *</label>
                                <input asp-for="Cantidad" type="number" step="0.01" min="0" class="form-control" required />
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="UnidadMedida" class="form-label">Unidad de Medida *</label>
                                <select asp-for="UnidadMedida" class="form-select" required>
                                    <option value="">Seleccione...</option>
                                    <option value="kg">Kilogramos (kg)</option>
                                    <option value="g">Gramos (g)</option>
                                    <option value="l">Litros (l)</option>
                                    <option value="ml">Mililitros (ml)</option>
                                    <option value="cm">Centímetros (cm)</option>
                                    <option value="unidad">Unidad</option>
                                    <option value="paquete">Paquete</option>
                                    <option value="caja">Caja</option>
                                    <option value="bolsa">Bolsa</option>
                                </select>
                                <span asp-validation-for="UnidadMedida" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="StockMinimo" class="form-label">Stock Mínimo *</label>
                                <input asp-for="StockMinimo" type="number" step="0.01" min="0" class="form-control" required />
                                <span asp-validation-for="StockMinimo" class="text-danger"></span>
                                <small class="form-text text-muted">Alerta cuando el stock esté por debajo de este valor</small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PrecioUnitario" class="form-label">Precio Unitario *</label>
                                <input asp-for="PrecioUnitario" type="number" step="0.01" min="0" class="form-control" required />
                                <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Sucursal *</label>
                                <select name="sucursalId" class="form-select" required>
                                    <option value="">Seleccione una sucursal...</option>
                                    @if (ViewBag.Sucursales != null)
                                    {
                                        @foreach (var sucursal in (List<SucursalViewModel>)ViewBag.Sucursales)
                                        {
                                            <option value="@sucursal.Id">@sucursal.Nombre</option>
                                        }
                                    }
                                </select>
                                <small class="form-text text-muted">Si no tienes sucursales, créalas en la sección de Configuración</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Activo" class="form-check-input" type="checkbox" checked />
                                <label asp-for="Activo" class="form-check-label">
                                    Insumo activo
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Crear Insumo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

