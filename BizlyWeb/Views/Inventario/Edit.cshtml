@model InsumoViewModel
@{
    ViewData["Title"] = "Editar Insumo";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Editar Insumo
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label">Nombre *</label>
                                <input asp-for="Nombre" class="form-control" required />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoriaId" class="form-label">Categoría</label>
                                <select asp-for="CategoriaId" class="form-select">
                                    <option value="">Sin categoría</option>
                                    @if (ViewBag.Categorias != null)
                                    {
                                        @foreach (var categoria in (List<CategoriaViewModel>)ViewBag.Categorias)
                                        {
                                            <option value="@categoria.Id" selected="@(Model.CategoriaId == categoria.Id)">@categoria.Nombre</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="CategoriaId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Cantidad" class="form-label">Cantidad *</label>
                                <input asp-for="Cantidad" type="number" step="0.01" min="0" class="form-control" required />
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                                <small class="text-muted">Para actualizar stock, usa la opción "Actualizar Stock"</small>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="UnidadMedida" class="form-label">Unidad de Medida *</label>
                                <select asp-for="UnidadMedida" class="form-select" required>
                                    <option value="">Seleccione...</option>
                                    <option value="kg" selected="@(Model.UnidadMedida == "kg")">Kilogramos (kg)</option>
                                    <option value="g" selected="@(Model.UnidadMedida == "g")">Gramos (g)</option>
                                    <option value="l" selected="@(Model.UnidadMedida == "l")">Litros (l)</option>
                                    <option value="ml" selected="@(Model.UnidadMedida == "ml")">Mililitros (ml)</option>
                                    <option value="cm" selected="@(Model.UnidadMedida == "cm")">Centímetros (cm)</option>
                                    <option value="unidad" selected="@(Model.UnidadMedida == "unidad")">Unidad</option>
                                    <option value="paquete" selected="@(Model.UnidadMedida == "paquete")">Paquete</option>
                                    <option value="caja" selected="@(Model.UnidadMedida == "caja")">Caja</option>
                                    <option value="bolsa" selected="@(Model.UnidadMedida == "bolsa")">Bolsa</option>
                                </select>
                                <span asp-validation-for="UnidadMedida" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="StockMinimo" class="form-label">Stock Mínimo *</label>
                                <input asp-for="StockMinimo" type="number" step="0.01" min="0" class="form-control" required />
                                <span asp-validation-for="StockMinimo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PrecioUnitario" class="form-label">Precio Unitario *</label>
                                <input asp-for="PrecioUnitario" type="number" step="0.01" min="0" class="form-control" required />
                                <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Precio Total</label>
                                <input type="text" class="form-control" value="@Model.PrecioTotal.ToBolivianos()" readonly />
                                <small class="text-muted">Calculado automáticamente</small>
                            </div>
                        </div>

                        @if (Model.StockBajo)
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Stock bajo:</strong> La cantidad actual (@Model.Cantidad) está por debajo del stock mínimo (@Model.StockMinimo).
                            </div>
                        }

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Activo" class="form-check-input" type="checkbox" />
                                <label asp-for="Activo" class="form-check-label">
                                    Insumo activo
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <div>
                                <a asp-action="ActualizarStock" asp-route-id="@Model.Id" class="btn btn-info me-2">
                                    <i class="fas fa-warehouse"></i> Actualizar Stock
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Guardar Cambios
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


