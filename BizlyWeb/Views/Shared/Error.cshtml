@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    var isAuthenticated = Context.Session.GetString("JWTToken") != null;
}

@if (!isAuthenticated)
{
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4 p-md-5 text-center">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <h1 class="text-danger mb-3">Error</h1>
                    <h2 class="text-muted mb-4">Ha ocurrido un error al procesar su solicitud</h2>
                    
                    @if (Model.ShowMessage)
                    {
                        <div class="alert alert-danger mt-4" role="alert">
                            <i class="fas fa-info-circle me-2"></i> @Model.Message
                        </div>
                    }
                    
                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted mt-4">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }
                    
                    <div class="mt-4">
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i> Volver al Inicio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                        <h1 class="text-danger mt-3">Error</h1>
                        <h2 class="text-muted">Ha ocurrido un error al procesar su solicitud</h2>
                        
                        @if (Model.ShowMessage)
                        {
                            <div class="alert alert-danger mt-4" role="alert">
                                <i class="fas fa-info-circle"></i> @Model.Message
                            </div>
                        }
                        
                        @if (Model.ShowRequestId)
                        {
                            <p class="text-muted mt-4">
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </p>
                        }
                        
                        <div class="mt-4">
                            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-home"></i> Volver al Cuadro de Mando
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
