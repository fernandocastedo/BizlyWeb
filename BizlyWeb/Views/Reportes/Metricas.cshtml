@using BizlyWeb.Models.DTOs
@model MetricasViewModel
@{
    ViewData["Title"] = "Métricas Financieras";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-chart-line"></i> Métricas Financieras
                </h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Metricas" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Fecha Inicio</label>
                    <input type="date" name="fechaInicio" class="form-control" value="@(Model.FiltroFechaInicio?.ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Fecha Fin</label>
                    <input type="date" name="fechaFin" class="form-control" value="@(Model.FiltroFechaFin?.ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Meta Mensual (Opcional)</label>
                    <input type="number" step="0.01" min="0" name="metaMensual" class="form-control" value="@Model.MetaMensualInput" placeholder="Ingrese meta...">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter"></i> Calcular
                    </button>
                    <a asp-action="Metricas" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Limpiar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Margen de Ganancia -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-percentage"></i> Margen de Ganancia Promedio</h5>
                </div>
                <div class="card-body text-center">
                    <h1 class="display-4 text-success">@Model.MargenGananciaPromedio.ToString("F2")%</h1>
                    <p class="text-muted">Calculado sobre ingresos y costos del período</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0"><i class="fas fa-balance-scale"></i> Punto de Equilibrio</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <h2 class="text-warning">@Model.PuntoEquilibrio.PuntoEquilibrio.ToString("C")</h2>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted">Costos Fijos:</small>
                            <p class="mb-0"><strong>@Model.PuntoEquilibrio.CostosFijos.ToString("C")</strong></p>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Costos Variables:</small>
                            <p class="mb-0"><strong>@Model.PuntoEquilibrio.CostosVariables.ToString("C")</strong></p>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted">Ingresos:</small>
                            <p class="mb-0"><strong>@Model.PuntoEquilibrio.Ingresos.ToString("C")</strong></p>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Margen Contribución:</small>
                            <p class="mb-0"><strong>@Model.PuntoEquilibrio.MargenContribucion.ToString("F2")%</strong></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Meta Mensual -->
    @if (Model.MetaMensual != null)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-bullseye"></i> Meta Mensual de Ventas</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <h5 class="text-muted">Meta</h5>
                        <h3>@Model.MetaMensual.MetaMensual.ToString("C")</h3>
                    </div>
                    <div class="col-md-3 text-center">
                        <h5 class="text-muted">Ingresos Actuales</h5>
                        <h3 class="@(Model.MetaMensual.IngresosActuales >= Model.MetaMensual.MetaMensual ? "text-success" : "text-warning")">
                            @Model.MetaMensual.IngresosActuales.ToString("C")
                        </h3>
                    </div>
                    <div class="col-md-3 text-center">
                        <h5 class="text-muted">Progreso</h5>
                        <h3>@Model.MetaMensual.PorcentajeMeta.ToString("F2")%</h3>
                        <div class="progress mt-2">
                            <div class="progress-bar @(Model.MetaMensual.PorcentajeMeta >= 100 ? "bg-success" : Model.MetaMensual.PorcentajeMeta >= 75 ? "bg-warning" : "bg-danger")" 
                                 role="progressbar" 
                                 style="width: @(Math.Min(100, Model.MetaMensual.PorcentajeMeta))%">
                                @Model.MetaMensual.PorcentajeMeta.ToString("F1")%
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <h5 class="text-muted">Proyección</h5>
                        <h3 class="@(Model.MetaMensual.Proyeccion >= Model.MetaMensual.MetaMensual ? "text-success" : "text-danger")">
                            @Model.MetaMensual.Proyeccion.ToString("C")
                        </h3>
                        <small class="text-muted">Tiempo transcurrido: @Model.MetaMensual.PorcentajeTiempo.ToString("F1")%</small>
                    </div>
                </div>
                @if (Model.MetaMensual.Diferencia < 0)
                {
                    <div class="alert alert-warning mt-3">
                        <i class="fas fa-exclamation-triangle"></i> 
                        Faltan @Math.Abs(Model.MetaMensual.Diferencia).ToString("C") para alcanzar la meta mensual.
                    </div>
                }
                else if (Model.MetaMensual.Diferencia > 0)
                {
                    <div class="alert alert-success mt-3">
                        <i class="fas fa-check-circle"></i> 
                        ¡Meta superada! Excedente: @Model.MetaMensual.Diferencia.ToString("C")
                    </div>
                }
            </div>
        </div>
    }
</div>

