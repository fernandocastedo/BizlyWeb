@using BizlyWeb.Models.DTOs
@model ComparativaMensualDto
@{
    ViewData["Title"] = "Comparativa Mensual";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-chart-area"></i> Comparativa Mensual de Desempe√±o
                </h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>

    @if (Model.Meses.Any())
    {
        <!-- Resumen Comparativo -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Promedio Ingresos</h5>
                        <h3 class="text-success">@Model.Meses.Average(m => m.Ingresos).ToString("C")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Promedio Costos</h5>
                        <h3 class="text-danger">@Model.Meses.Average(m => m.Costos).ToString("C")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Promedio Ganancia</h5>
                        <h3 class="text-primary">@Model.Meses.Average(m => m.Ganancia).ToString("C")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Promedio Ventas</h5>
                        <h3 class="text-info">@Model.Meses.Average(m => m.TotalVentas).ToString("F0")</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabla Comparativa -->
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">Comparativa por Mes</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Mes</th>
                                <th>Ingresos</th>
                                <th>Costos</th>
                                <th>Ganancia</th>
                                <th>Total Ventas</th>
                                <th>Margen %</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mes in Model.Meses)
                            {
                                var margen = mes.Ingresos > 0 ? (mes.Ganancia / mes.Ingresos) * 100 : 0;
                                <tr>
                                    <td><strong>@mes.NombreMes</strong></td>
                                    <td>@mes.Ingresos.ToString("C")</td>
                                    <td>@mes.Costos.ToString("C")</td>
                                    <td>
                                        <span class="@(mes.Ganancia >= 0 ? "text-success" : "text-danger")">
                                            <strong>@mes.Ganancia.ToString("C")</strong>
                                        </span>
                                    </td>
                                    <td>@mes.TotalVentas</td>
                                    <td>
                                        <span class="@(margen >= 0 ? "text-success" : "text-danger")">
                                            @margen.ToString("F2")%
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No hay datos suficientes para generar la comparativa.
        </div>
    }
</div>

